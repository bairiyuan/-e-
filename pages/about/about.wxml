<!--pages/about/about.wxml-->
<view class="about-container">
  <!-- 公司信息 -->
  <view class="company-section">
    <view class="company-logo">
      <text class="logo-icon">🦴</text>
    </view>
    <text class="company-name">骨健康科技有限公司</text>
    <text class="company-slogan">科学护骨，健康生活</text>
  </view>

  <!-- 关于我们 -->
  <view class="about-section">
    <text class="section-title">关于我们</text>
    <text class="about-content">
      骨健康科技有限公司是一家专注于骨骼健康产品研发与服务的创新企业。
      我们基于乌药抗骨质疏松研究成果，致力于为中老年人提供专业的骨骼健康解决方案。
      
      我们的使命是通过科学的产品和专业的服务，帮助更多人拥有健康的骨骼，享受高品质的生活。
    </text>
  </view>

  <!-- 联系方式 -->
  <view class="contact-section">
    <text class="section-title">联系我们</text>
    <view class="contact-list">
      <view class="contact-item" bindtap="callService">
        <view class="contact-icon">📞</view>
        <view class="contact-info">
          <text class="contact-label">客服热线</text>
          <text class="contact-value">{{companyInfo.contact.phone}}</text>
        </view>
        <view class="contact-arrow">></view>
      </view>
      
      <view class="contact-item" bindtap="copyEmail">
        <view class="contact-icon">📧</view>
        <view class="contact-info">
          <text class="contact-label">电子邮箱</text>
          <text class="contact-value">{{companyInfo.contact.email}}</text>
        </view>
        <view class="contact-arrow">></view>
      </view>
      
      <view class="contact-item">
        <view class="contact-icon">📍</view>
        <view class="contact-info">
          <text class="contact-label">公司地址</text>
          <text class="contact-value">{{companyInfo.contact.address}}</text>
        </view>
        <view class="contact-arrow">></view>
      </view>
    </view>
  </view>

  <!-- 服务时间 -->
  <view class="service-section">
    <text class="section-title">服务时间</text>
    <view class="service-info">
      <text class="service-time">周一至周五：9:00-18:00</text>
      <text class="service-time">周六：9:00-17:00</text>
      <text class="service-time">周日：休息</text>
    </view>
  </view>

  <!-- 版本信息 -->
  <view class="version-section">
    <text class="version-text">版本号：v1.0.0</text>
    <text class="copyright">© 2024 骨健康科技有限公司 版权所有</text>
  </view>
</view>