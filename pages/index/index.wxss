/* pages/index/index.wxss */
.index-container {
    padding-bottom: 120rpx;
    background: #f5f5f5;
    min-height: 100vh;
  }
  
  /* 头部样式 */
  .header {
    background: linear-gradient(135deg, #1a73e8, #6c8ef5);
    color: white;
    padding: 40rpx 30rpx;
    border-radius: 0 0 40rpx 40rpx;
  }
  
  .header-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  
  .logo {
    display: flex;
    align-items: center;
  }
  
  .logo-icon {
    width: 80rpx;
    height: 80rpx;
    background-color: white;
    border-radius: 20rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 24rpx;
    color: #1a73e8;
    font-weight: bold;
    font-size: 32rpx;
  }
  
  .logo-title {
    display: block;
    font-size: 36rpx;
    margin-bottom: 8rpx;
  }
  
  .logo-subtitle {
    display: block;
    font-size: 24rpx;
    opacity: 0.9;
  }
  
  .user-info {
    display: flex;
    align-items: center;
  }
  
  .avatar {
    width: 72rpx;
    height: 72rpx;
    border-radius: 50%;
    background-color: rgba(255, 255, 255, 0.3);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 28rpx;
  }
  
  /* 功能导航 */
  .nav-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30rpx;
    padding: 30rpx;
    background: white;
    border-radius: 30rpx;
    margin: 30rpx;
    box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  }
  
  .nav-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }
  
  .nav-icon {
    width: 100rpx;
    height: 100rpx;
    border-radius: 30rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 16rpx;
    font-size: 48rpx;
  }
  
  .risk-icon {
    background-color: #e3f2fd;
    color: #1a73e8;
  }
  
  .knowledge-icon {
    background-color: #e8f5e9;
    color: #43a047;
  }
  
  .intervention-icon {
    background-color: #fff3e0;
    color: #ff9800;
  }
  
  .nav-text {
    font-size: 24rpx;
    color: #555;
  }
  
  /* 内容区域 */
  .section {
    background: white;
    border-radius: 30rpx;
    margin: 30rpx;
    padding: 30rpx;
    box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  }
  
  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30rpx;
    padding-bottom: 20rpx;
    border-bottom: 1rpx solid #f0f0f0;
  }
  
  .section-title {
    font-size: 32rpx;
    font-weight: 600;
    color: #333;
  }
  
  .more-link {
    font-size: 24rpx;
    color: #1a73e8;
  }
  
  /* 风险自评卡片 */
  .risk-card {
    background: linear-gradient(135deg, #ff9a9e, #fad0c4);
    border-radius: 24rpx;
    padding: 30rpx;
    color: white;
  }
  
  .risk-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .risk-text {
    flex: 1;
  }
  
  .risk-title {
    display: block;
    font-size: 32rpx;
    font-weight: 600;
    margin-bottom: 8rpx;
  }
  
  .risk-desc {
    display: block;
    font-size: 24rpx;
    opacity: 0.9;
  }
  
  .start-btn {
    background: white;
    color: #ff6b6b;
    border: none;
    padding: 16rpx 32rpx;
    border-radius: 20rpx;
    font-weight: 600;
    font-size: 24rpx;
  }
  
  /* 文章列表 */
  .article-list {
    display: flex;
    flex-direction: column;
    gap: 24rpx;
  }
  
  .article-item {
    padding: 24rpx 0;
    border-bottom: 1rpx solid #f0f0f0;
  }
  
  .article-item:last-child {
    border-bottom: none;
  }
  
  .article-title {
    display: block;
    font-size: 28rpx;
    font-weight: 500;
    color: #333;
    margin-bottom: 12rpx;
    line-height: 1.4;
  }
  
  .article-meta {
    display: flex;
    gap: 20rpx;
  }
  
  .article-category, .article-read {
    font-size: 22rpx;
    color: #999;
  }
  
  /* 活动列表 */
  .activity-list {
    display: flex;
    flex-direction: column;
    gap: 24rpx;
  }
  
  .activity-item {
    padding: 24rpx 0;
    border-bottom: 1rpx solid #f0f0f0;
  }
  
  .activity-item:last-child {
    border-bottom: none;
  }
  
  .activity-title {
    display: block;
    font-size: 28rpx;
    font-weight: 500;
    color: #333;
    margin-bottom: 12rpx;
  }
  
  .activity-meta {
    display: flex;
    gap: 20rpx;
  }
  
  .activity-category, .activity-time {
    font-size: 22rpx;
    color: #999;
  }