<!--pages/product-detail/product-detail.wxml-->
<view class="product-detail-container">
  <!-- 产品头部 -->
  <view class="product-header">
    <view class="product-image">
      <text class="image-placeholder">💊</text>
    </view>
    <view class="product-basic-info">
      <text class="product-name">{{product.name}}</text>
      <text class="product-desc">{{product.description}}</text>
      <view class="product-price">
        <text class="current-price">¥{{product.price}}</text>
      </view>
    </view>
  </view>

  <!-- 适用人群 -->
  <view class="detail-section">
    <text class="section-title">适用人群</text>
    <text class="suitable-content">{{product.suitable}}</text>
  </view>

  <!-- 产品特点 -->
  <view class="features-section">
    <text class="section-title">产品特点</text>
    <view class="features-list">
      <block wx:for="{{product.features}}" wx:key="*this">
        <view class="feature-item">
          <text class="feature-icon">✓</text>
          <text class="feature-text">{{item}}</text>
        </view>
      </block>
    </view>
  </view>

  <!-- 健康价值 -->
  <view class="value-section">
    <text class="section-title">健康价值</text>
    <view class="value-list">
      <view class="value-item">
        <text class="value-icon">🦴</text>
        <view class="value-content">
          <text class="value-title">改善骨密度</text>
          <text class="value-desc">基于乌药专利技术，科学改善骨骼健康</text>
        </view>
      </view>
      <view class="value-item">
        <text class="value-icon">💪</text>
        <view class="value-content">
          <text class="value-title">易于吸收</text>
          <text class="value-desc">口服液剂型，提高营养成分吸收率</text>
        </view>
      </view>
      <view class="value-item">
        <text class="value-icon">🏘️</text>
        <view class="value-content">
          <text class="value-title">社区普惠</text>
          <text class="value-desc">普惠定价，服务社区居民骨骼健康</text>
        </view>
      </view>
    </view>
  </view>

  <!-- 服务保障 -->
  <view class="service-section">
    <text class="section-title">服务保障</text>
    <view class="service-list">
      <view class="service-item">
        <text class="service-icon">📞</text>
        <text class="service-text">专业健康咨询服务</text>
      </view>
      <view class="service-item">
        <text class="service-icon">🏥</text>
        <text class="service-text">社区健康筛查支持</text>
      </view>
      <view class="service-item">
        <text class="service-icon">📚</text>
        <text class="service-text">个性化健康指导</text>
      </view>
    </view>
  </view>

  <!-- 底部操作栏 -->
  <view class="action-bar">
    <button class="cart-btn" bindtap="addToCart">加入购物车</button>
    <button class="buy-btn" bindtap="placeOrder">立即购买</button>
  </view>
</view>