/* pages/article/article.wxss */
.article-container {
    padding: 30rpx;
    background: #f5f5f5;
    min-height: 100vh;
  }
  
  .article-header {
    background: white;
    border-radius: 20rpx;
    padding: 40rpx;
    margin-bottom: 30rpx;
    box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  }
  
  .article-title {
    display: block;
    font-size: 36rpx;
    font-weight: 600;
    color: #333;
    margin-bottom: 24rpx;
    line-height: 1.4;
  }
  
  .article-meta {
    display: flex;
    gap: 20rpx;
    align-items: center;
  }
  
  .article-category {
    padding: 8rpx 20rpx;
    background: #e6f7ff;
    color: #1890ff;
    border-radius: 20rpx;
    font-size: 24rpx;
  }
  
  .article-read, .article-time {
    font-size: 24rpx;
    color: #999;
  }
  
  .article-content {
    background: white;
    border-radius: 20rpx;
    padding: 40rpx;
    margin-bottom: 30rpx;
    box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  }
  
  .content-text {
    display: block;
    font-size: 30rpx;
    color: #333;
    line-height: 1.8;
    margin-bottom: 40rpx;
  }
  
  .content-section {
    display: flex;
    flex-direction: column;
    gap: 30rpx;
  }
  
  .section {
    border-left: 4rpx solid #1a73e8;
    padding-left: 20rpx;
  }
  
  .section-title {
    display: block;
    font-size: 28rpx;
    font-weight: 600;
    color: #333;
    margin-bottom: 12rpx;
  }
  
  .section-content {
    display: block;
    font-size: 26rpx;
    color: #666;
    line-height: 1.6;
  }
  
  .article-actions {
    display: flex;
    gap: 20rpx;
    padding: 0 30rpx;
  }
  
  .action-item {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 20rpx;
    background: white;
    border-radius: 12rpx;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  }
  
  .action-icon {
    font-size: 36rpx;
    margin-bottom: 8rpx;
  }
  
  .action-text {
    font-size: 24rpx;
    color: #666;
  }